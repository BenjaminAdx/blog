{% extends 'base.html.twig' %}

{% block title %}Chezbibi - Connexion
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Formulaire de Connexion</h1>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{% if error %}
			<div class="alert alert-danger mt-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('security.login') }}" method="post">
			<div class="form-group">
				<label for="username" class="form-label mt-4">Adresse e-mail</label>
				<input type="email" class="form-control" id="username" name="_username" aria-describedby="emailHelp" placeholder="exemple@chezbibi.com" required>
				<small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre adresse e-mail</small>
			</div>
			<div class="form-group">
				<label for="password" class="form-label mt-4">Mot de passe</label>
				<input type="password" class="form-control" id="password" name="_password" placeholder="********" required>
				<small id="emailHelp" class="form-text text-muted">
					<a href="{{ path('app_forgot_password_request') }}">Mot de passe oublie?</a>
				</small>
			</div>
			<button type="submit" class="btn btn-primary mt-4">Se connecter</button>
		</form>
	</div>

{% endblock %}
