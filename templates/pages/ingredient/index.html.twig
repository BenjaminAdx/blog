{% extends 'base.html.twig' %}

{% block title %}Chezbibi Mes Ingredients
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Mes ingrédients</h1>
		<a href="{{ path('ingredient.new') }}" class="btn btn-primary mt-4">Créer un ingrédient</a>

		{# read and display just one flash message #}
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}
		{% if not ingredients.items is same as([]) %}
			<table class="table table-hover mt-4">
				<thead>
					<tr>
						<th scope="col">Numéro</th>
						<th scope="col">Nom</th>
						<th scope="col">Quantité</th>
						<th scope="col">Date de création</th>
						<th scope="col">Edition</th>
						<th scope="col">Suppression</th>
					</tr>
				</thead>
				<tbody>
					{% for ingredient in ingredients %}
						<tr class="table-primary">
							<th scope="row">{{ingredient.id}}</th>
							<td>{{ingredient.name}}</td>
							<td>{{ingredient.quantity}}</td>
							<td>{{ ingredient.createdAt|date("d/m/Y")}}</td>
							<td>
								<a href="{{ path('ingredient.edit', {'id': ingredient.id}) }}" class="btn btn-info">Modifier</a>
							</td>
							<td>
								<a href="{{ path('ingredient.delete', {'id': ingredient.id}) }}" onclick="return confirm('Voulez-vous vraiment supprimer cet ingrédient ?')" class="btn btn-danger">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<div class="count mt-4">
				{{ ingredients.getTotalItemCount }}
				ingrédients au total
			</div>
			<div class="navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(ingredients) }}
			</div>
		{% else %}
			<h4>Il n'y a pas d'ingrédient</h4>
		{% endif %}

	</div>
{% endblock %}
